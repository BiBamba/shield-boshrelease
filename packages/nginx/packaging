#!/bin/bash
set -eux
CPUS=$(grep -c ^processor /proc/cpuinfo)

tar -xzf nginx/pcre-8.37.tar.gz
tar -xzf nginx/nginx-1.12.2.tar.gz
pushd nginx-1.12.2
  ./configure \
    --prefix=${BOSH_INSTALL_TARGET} \
    --with-pcre=../pcre-8.37 \
    --with-http_stub_status_module \
    --with-http_ssl_module
  make -j$CPUS && make install
popd
